<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About BaddieBOT ðŸ’…"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/sassy_primary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Created with attitude by Vatsalya Bhadaurya"
            android:textAlignment="center"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/linkedinButton"
                style="@style/BaddieBotButton.Social"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LinkedIn"
                app:icon="@drawable/ic_linkedin"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/githubButton"
                style="@style/BaddieBotButton.Social"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="GitHub"
                app:icon="@drawable/ic_github"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/emailButton"
                style="@style/BaddieBotButton.Social"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Email"
                app:icon="@drawable/ic_email"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 